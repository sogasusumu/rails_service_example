  "servers" : [ {
    "url" : "/"
  } ],
  "paths" : {
    "/companies/{companyId}/chat_rooms" : {
      "get" : {
        "tags" : [ "companies", "chat_rooms" ],
        "summary" : "該当企業のチャット一覧",
        "description" : "指定されたcompany_idの企業",
        "operationId" : "get_chatrooms_by_company_id",
        "parameters" : [ {
          "name" : "companyId",
          "in" : "path",
          "description" : "chat roomsを取得したい企業のID",
          "required" : true,
          "schema" : {
            "type" : "integer"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "成功時のレスポンス",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/ChatRoom"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/companies/{companyId}/chatrooms/{chatRoomId}/messages" : {
      "get" : {
        "tags" : [ "companies", "chatRooms", "messages" ],
        "summary" : "チャットのメッセージ一覧",
        "description" : "指定されたchatRoomIdで指定されたChatRoomのメッセージ一覧",
        "operationId" : "get_chat_room_messages_by_chat_room_id",
        "parameters" : [ {
          "name" : "companyId",
          "in" : "path",
          "description" : "chat roomsを取得したい企業のID",
          "required" : true,
          "schema" : {
            "type" : "integer"
          }
        }, {
          "name" : "chatRoomId",
          "in" : "path",
          "description" : "取得したいchatRoomのID",
          "required" : true,
          "schema" : {
            "type" : "integer"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "成功時のレスポンス",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Message"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "ChatRoom" : {
        "required" : [ "companyId", "companyMessagesCounts", "companyName", "firstMessageCreatedAt", "id", "lastMessageCreatedAt", "lastMessageSender", "userId", "userMessagesCounts", "userName" ],
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer",
            "example" : 1
          },
          "companyId" : {
            "type" : "integer",
            "example" : 1
          },
          "companyName" : {
            "type" : "string",
            "example" : "example company"
          },
          "userId" : {
            "type" : "integer",
            "example" : 1
          },
          "userName" : {
            "type" : "string",
            "example" : "example user name"
          },
          "companyMessagesCounts" : {
            "type" : "integer",
            "example" : 10
          },
          "userMessagesCounts" : {
            "type" : "integer",
            "example" : 10
          },
          "firstMessageCreatedAt" : {
            "type" : "string",
            "format" : "date-time"
          },
          "lastMessageCreatedAt" : {
            "type" : "string",
            "format" : "date-time"
          },
          "lastMessageSender" : {
            "type" : "string"
          }
        }
      },
      "Message" : {
        "required" : [ "body", "createdAt", "id", "isSelf", "senderName" ],
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer"
          },
          "senderName" : {
            "type" : "string"
          },
          "body" : {
            "type" : "string"
          },
          "isSelf" : {
            "type" : "boolean"
          },
          "createdAt" : {
            "type" : "string",
            "format" : "date-time"
          }
        }
      }
    }
  }
